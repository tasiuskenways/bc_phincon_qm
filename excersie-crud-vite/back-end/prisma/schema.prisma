generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Category {
  id       String    @id @default(uuid())
  name     String
  products Product[]
}

model Product {
  id         String    @id @default(uuid())
  name       String
  price      Float
  stock      Int
  categoryId String
  category   Category  @relation(fields: [categoryId], references: [id])
}